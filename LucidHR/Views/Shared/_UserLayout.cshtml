<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Manager</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/img/TaskLogoSmall.jpeg">

    <!-- Fontfamily -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;0,900;1,400;1,500;1,700&amp;display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <!-- Feathericon CSS -->
    <link rel="stylesheet" href="/plugins/feather/feather.css">

    <!-- Pe7 CSS -->
    <link rel="stylesheet" href="/plugins/icons/flags/flags.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!-- Main CSS -->
    <link rel="stylesheet" href="/css/styleTask.css">
    @RenderSection("Styles", required: false)

    <style>
        .user-header {
            background-color: #f9f9f9;
            display: flex;
            padding: 0px;
        }
    </style>
</head>
<body>
    <!-- Main Wrapper -->
    <div class="main-wrapper">
        <!-- Header -->
        <div class="header">
            <!-- Logo -->
            <div class="header-left">
                <a asp-controller="Home" asp-action="Index" class="logo">
                    <img src="/img/TaskLogo.png" alt="Logo">
                </a>
                <a asp-controller="Home" asp-action="Index" class="logo logo-small">
                    <img src="/img/TaskLogoSmall.jpeg" alt="Logo" width="30" height="30">
                </a>
            </div>
            <!-- /Logo -->

            <div class="menu-toggle">
                <a href="javascript:void(0);" id="toggle_btn">
                    <i class="fas fa-bars"></i>
                </a>
            </div>

            <!-- Mobile Menu Toggle -->
            <a class="mobile_btn" id="mobile_btn">
                <i class="fas fa-bars"></i>
            </a>
            <!-- /Mobile Menu Toggle -->
            <!-- Header Right Menu -->
            <ul class="nav user-menu">
                <li class="nav-item zoom-screen me-2">
                    <a href="#" class="nav-link header-nav-list win-maximize">
                        <img src="/img/icons/header-icon-04.svg" alt="">
                    </a>
                </li>

                <!-- User Menu -->
                <li class="nav-item dropdown has-arrow new-user-menus">
                    <a href="#" class="dropdown-toggle nav-link" data-bs-toggle="dropdown">
                        <div class="user-img">
                            <div class="user-text">
                                <h6>@Context.Session.GetString("Username")</h6>
                                <p class="text-muted mb-0">@User.Identity.Name</p>
                            </div>
                        </div>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="user-text">
                                <h6>@Context.Session.GetString("Username")</h6>
                                <p class="text-muted mb-0">@User.Identity.Name</p>
                            </div>
                        </div>
                        <a class="dropdown-item" asp-controller="MainTask" asp-action="Login">Logout</a>
                    </div>
                </li>
                <!-- /User Menu -->
            </ul>
            <!-- /Header Right Menu -->
        </div>
        <!-- /Header -->
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="submenu active">
                            <a href="#"><i class="feather-grid"></i><span>Dashboard</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a asp-controller="MainTask" asp-action="TraineeDashboard">View Tasks</a></li>
                                <li><a asp-controller="Task" asp-action="DisplayPreviousTask">View Previous Task</a></li>
                                <li><a asp-controller="Task" asp-action="TopPerformers">Performers of the week</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Sidebar -->

        <div class="content">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer>
            <p>COPYRIGHT © 2024 MASSTECH BUSINESS SOLUTIONS.</p>
        </footer>
        <!-- /Footer -->
    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Icon JS -->
    <script src="/js/feather.min.js"></script>

    <!-- Slimscroll JS -->
    <script src="/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Chart JS -->
    <script src="/plugins/apexchart/apexcharts.min.js"></script>
    <script src="/plugins/apexchart/chart-data.js"></script>

    <!-- Custom JS -->
    <script src="/js/script.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>