        }

        h2 {
            font-size: 24px;
            color: #343a40;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-label {
            font-size: 16px;
            color: #495057;
        }

        .form-control, .custom-select {
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 10px;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
            border-radius: 4px;
            padding: 10px;
            font-size: 16px;
            width: 100%;
            margin-top: 20px;
        }

            .btn-primary:hover {
                background-color: #224abe;
                border-color: #224abe;
            }

        .drag-drop {
            border: 2px dashed #ced4da;
            border-radius: 4px;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
            color: #6c757d;
            cursor: pointer;
        }

            .drag-drop.dragover {
                border-color: #4e73df;
                background-color: #f1f3f9;
            }

        .static-content {
            margin-top: 30px;
            padding: 20px;
            background-color: #e9ecef;
            border-radius: 8px;
            text-align: center;
        }
    </style>
</head>
<body>
