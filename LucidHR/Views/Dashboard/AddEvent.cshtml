<div id="main-content">

    <div class="block-header py-lg-4 py-3">
        <div class="row g-3">
            <div class="col-md-6 col-sm-12">
                <h2 class="m-0 fs-5"><a href="javascript:void(0);" class="btn btn-sm btn-link ps-0 btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Add Events</h2>
               
            </div>
            <div class="col-md-6 col-sm-12 text-md-end">
               
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row g-3">
            <div class="card p-3">


                <form asp-action="AddEvent" class="container ms-6">
                    <h2 style="text-align:center">Add Event</h2>

                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Event Title</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label">Event Type</label>
                        <select asp-for="Type" class="form-control">
                            <option value="Holiday">Holiday</option>
                            <option value="Non-Holiday">Non-Holiday</option>
                            <!-- Add more options as needed -->
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    @* custom colours  *@
                    <div class="form-group">
                        @* <label asp-for="EndDate" class="control-label">End Date</label> *@
                        <input asp-for="CustomColor" readonly hidden value="black" type="text" class="form-control" />
                        @* <span asp-validation-for="EndDate" class="text-danger"></span> *@
                    </div>

                    <button type="submit" class="btn btn-primary my-3">Add Event</button>
                </form>


            </div>
        </div>
    </div>
</div>
