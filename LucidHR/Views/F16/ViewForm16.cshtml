                </div> *@
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row g-3">
            <div class="card p-3">
                <div class="form container">

                    @if (Model != null && Model.Count > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Form ID</th>
                                    <th>Email</th>
                                    <th>Attachment</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.id</td>
                                        <td>@item.email</td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(item.attachment))
                                            {
                                                <span>@item.attachment</span>

                                            }
                                        </td>
                                        <td> <a href="@Url.Content($"https://localhost:44383/api/f16/download/{item.attachment}")">Download</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No Form 16 records found.</p>
                    }

                </div>

            </div>
        </div>
    </div>
</div>