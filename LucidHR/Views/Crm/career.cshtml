<section class="container">
    <div style="background-color: antiquewhite; padding: 20px; border-radius: 10px;">
        <h2 class="text-center my-4">Send Us Resume</h2>
        <form id="careerForm" asp-controller="Career" asp-action="AddEmp" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="Name">Full Name</label>
                    <input asp-for="Name" class="form-control" id="fullName" placeholder="Your full name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" id="email" placeholder="Your email id" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="Contact">Mobile</label>
                    <input asp-for="Contact" class="form-control" id="mobile" placeholder="Your Mobile Number" required>
                </div>
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="address">Address</label>
                    <input asp-for="address" class="form-control" id="address" placeholder="Address" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="role">Position Applied</label>
                    <input asp-for="role" class="form-control" id="role" placeholder="Role" required>
                </div>
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="yrofexp">Year Of Experience</label>
                    <input asp-for="yrofexp" class="form-control" id="exp" placeholder="" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="noticeperiod">Notice Period</label>
                    <input asp-for="noticeperiod" class="form-control" id="np" placeholder="" required>
                </div>
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="doj">Earliest Joining Date</label>
                    <input asp-for="doj" type="date" class="form-control" id="date" placeholder="" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="ctc">Current CTC</label>
                    <input asp-for="ctc" class="form-control" id="ctc" placeholder="" required>
                </div>
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="expctc">Expected CTC</label>
                    <input asp-for="expctc" class="form-control" id="ectc" placeholder="" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="city">City</label>
                    <input asp-for="city" class="form-control" id="city" placeholder="" required>
                </div>
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="FileData">Upload PDF</label>
                    <input type="file" class="form-control" name="FileData" id="pdfFile" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6" style="margin-bottom: 15px;">
                    <label asp-for="reason">Reason For Job Change</label>
                    <input asp-for="reason" class="form-control" id="reason" placeholder="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</section>

<script>
    document.getElementById('careerForm').addEventListener('submit', function(event) {
        var requiredFields = document.querySelectorAll('#careerForm input[required]');
        var allFieldsFilled = true;

        requiredFields.forEach(function(field) {
            if (!field.value.trim()) {
                allFieldsFilled = false;
                field.style.borderColor = "red"; // Optional: Highlight empty fields
            } else {
                field.style.borderColor = ""; // Reset border color if field is filled
            }
        });

        if (!allFieldsFilled) {
            alert('Please fill out all required fields.');
            event.preventDefault();
        }

