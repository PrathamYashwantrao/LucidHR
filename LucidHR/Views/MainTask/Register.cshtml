@model LucidHR.Models.UserRegistrationViewModel

@{
    ViewData["Title"] = "User Registration";
    Layout = "~/Views/Shared/_LayoutTask.cshtml";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Tasks - Register</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/img/TaskLogoSmall.jpeg">

    <!-- Fontfamily -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;0,900;1,400;1,500;1,700&amp;display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Feathericon CSS -->
    <link rel="stylesheet" href="~/plugins/feather/feather.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/plugins/fontawesome/css/all.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/styleTask.css">

    <style>
        .login-wrapper .loginbox .login-left {
            align-items: center;
            background: #fff;
            flex-direction: column;
            justify-content: end;
            width: 400px;
            display: flex;
            background-blend-mode: multiply;
            border-radius: 8px 20px 20px 8px;
            position: relative;
        }

        .form-group {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }

            .password-toggle i {
                font-size: 18px;
            }

        body {
            font-family: 'Century Gothic'
        }
    </style>
</head>
<body>
    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox">
                    <div class="login-left">
                        <img class="img-fluid rounded-start rounded-3" src="https://images.unsplash.com/photo-1566888596782-c7f41cc184c5?ixlib=rb-1.2.1&auto=format&fit=crop&w=2134&q=80" width="500px" alt="Logo">
                    </div>
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <h1>Sign Up</h1>
                            <p class="account-subtitle">Enter details to create your account</p>

                            <form asp-action="Register" method="post">
                                <div class="form-group">
                                    <label>Username <span class="login-danger">*</span></label>
                                    <input asp-for="Username" class="form-control" />
                                    <span class="profile-views"><i class="fas fa-user-circle"></i></span>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label>Batch <span class="login-danger">*</span></label>
                                    <select asp-for="Batch" class="form-control">
                                        <option value="">Select Batch</option>
                                        <option value="Batch1">Batch 1</option>
                                        <option value="Batch2">Batch 2</option>
                                        <option value="Batch3">Batch 3</option>
                                    </select>
                                    <span class="profile-views"><i class="fas fa-user-circle"></i></span>
                                    <span asp-validation-for="Batch" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label>Email <span class="login-danger">*</span></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span class="profile-views"><i class="fas fa-envelope"></i></span>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label>Full Name <span class="login-danger">*</span></label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span class="profile-views"><i class="fas fa-user-circle"></i></span>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="form-group position-relative">
                                    <label>Password <span class="login-danger">*</span></label>
                                    <input asp-for="Password" type="password" class="form-control" id="password-input" />
                                    <span class="password-toggle" onclick="togglePassword()">
                                        <i class="fas fa-eye" id="password-eye"></i>
                                    </span>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group position-relative">
                                    <label>Confirm password <span class="login-danger">*</span></label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirm-password-input" />
                                    <span class="password-toggle" onclick="toggleConfirmPassword()">
                                        <i class="fas fa-eye" id="confirm-password-eye"></i>
                                    </span>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="dont-have">Already Registered? <a asp-controller="MainTask" asp-action="Login">Login</a></div>

                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Icon JS -->
    <script src="~/js/feather.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/script.js"></script>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById("password-input");
            const passwordEye = document.getElementById("password-eye");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                passwordEye.classList.remove("fa-eye");
                passwordEye.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                passwordEye.classList.remove("fa-eye-slash");
                passwordEye.classList.add("fa-eye");
            }
        }

        function toggleConfirmPassword() {
            const confirmPasswordInput = document.getElementById("confirm-password-input");
            const confirmPasswordEye = document.getElementById("confirm-password-eye");

            if (confirmPasswordInput.type === "password") {
                confirmPasswordInput.type = "text";
                confirmPasswordEye.classList.remove("fa-eye");
                confirmPasswordEye.classList.add("fa-eye-slash");
            } else {
                confirmPasswordInput.type = "password";
                confirmPasswordEye.classList.remove("fa-eye-slash");
                confirmPasswordEye.classList.add("fa-eye");
            }
        }
    </script>
</body>
</html>