@{
    ViewData["Title"] = "View Offer Letter";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
   
}



<div id="main-content">

    <div class="block-header py-lg-4 py-3">
        <div class="row g-3">
            <div class="col-md-6 col-sm-12">
                <h2 class="m-0 fs-5"><a href="javascript:void(0);" class="btn btn-sm btn-link ps-0 btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Add Email and Download Offer Letter</h2>
                
            </div>
            <div class="col-md-6 col-sm-12 text-md-end">
                
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row g-3">
            <div class="card p-3">



                <h2>View Offer Letter</h2>

                <form asp-action="DownloadOfferLetter" method="post" class="container mt-5">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <button type="submit" class="btn btn-primary my-3">Download Offer Letter</button>
                </form>


            </div>
        </div>
    </div>
</div>